@{
    ViewBag.Title = "Umfrage-Tool";
}
@model List<SurveyViewModel>

<script src="~/Scripts/Abfrage_vorm_löschen.js"></script>

<div>
    <div class="panel panel-default">
        <div class="panel-heading"><h4>Liste der erstellten Umfragen</h4></div>
        <div class="panel-body" style="padding:0px">
            <table class="table" style="margin-bottom:0px;">
                <tr style="border:none">
                    <th style="border:none">
                        <p>Umfrage Name</p>
                    </th>
                    <th style="border:none">
                        <p>Link zur Beantwortung</p>
                    </th>
                </tr>
                @foreach (var Umfrage in Model)
                {
                    string link = "http://localhost:60480/Umfrage_Beantwortung?arg=" + Umfrage.ID;
                    <tr>
                        <td>
                            <p>@Umfrage.name</p>
                        </td>
                        <td><a href="@link">@link</a></td>
                        <td>@Html.ActionLink("auswerten", "Fragen_Ergebnisse", "Umfrage_Ergebnisse", new { arg = Umfrage.ID }, new { @class = "btn btn-info btn-xs" })</td>
                        <td>@Html.ActionLink("bearbeiten", "FrageErstellung", "Umfrage_Erstellung", new { arg = Umfrage.ID }, new { @class = "btn btn-info btn-xs" })</td>
                        <td>@Html.ActionLink("löschen", "Loeschfunktion", "Home", new { arg = Umfrage.ID }, new { @class = "btn btn-info btn-xs", onclick = "return confirm_delete();", id = "loeschen", name = Umfrage.name })</td>
                        <td>@Html.ActionLink("Status", "Index", "Umfrage_Ergebnisse", null, new { @class = "btn btn-info btn-xs" })</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading"><h4>Umfrage erstellen</h4></div>
        <div class="panel-body">
            @Html.ActionLink("Umfrage erstellen", "Index", "Umfrage_Erstellung", null, new { @class = "btn btn-info btn-lg" })
        </div>
    </div>
</div>
