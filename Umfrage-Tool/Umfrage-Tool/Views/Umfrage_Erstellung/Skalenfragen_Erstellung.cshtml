<script src="~/Scripts/Frageerstellung.js"></script>
<table class="table table-bordered">
    <tr>
        <td colspan="2">
            <label>Abstufungen</label>
        </td>
        <td colspan="1">
            <select class="form-control" onchange="Passe_Antworten_an(this.value, @Session["last"])" name="model.questionViewModels[@Session["last"]].scaleLength">
                @for (int c = 2; c <= 100; c++)
                {
                    <option value="@c">
                        @c
                    </option>
                }
            </select>
        </td>
    </tr>

    <tr>
        <td rowspan="6">
            <input id="SkalaFürErstellung" class="input-range" style="height:150px;min-width:75px" type="range" value="0" step="1" min="1" max="3">
        </td>
    </tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Minimum</label>
        </td>
        <td>
            <input name="model.questionViewModels[@Session["last"]].choices[0].text" class="form-control" type="text" />
        </td>
    </tr>
    <tr class="Erstell_Zeile"></tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Mittelwert</label>
        </td>
        <td>
            <input id="MittelFeld_Text" name="model.questionViewModels[@Session["last"]].choices[1].text" class="form-control" type="text" />
        </td>
    </tr>
    <tr class="Erstell_Zeile"></tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Maximum</label>
        </td>
        <td>
            <input id="MaxiFeld_Text" name="model.questionViewModels[@Session["last"]].choices[2].text" class="form-control" type="text" />
        </td>
    </tr>
</table>

<script>
    Passe_Antworten_an(2, @Session["last"]);
</script>

<style>
    .Erstell_Zeile {
        height: 30px;
    }

    .input-range {
        -webkit-appearance: slider-vertical;
        width: 1px !important;
        margin: unset;
        margin-top: 19px;
        transform: rotate(-180deg);
    }
</style>