


<table class="table table-bordered">
    <tr>
        <td colspan="2">
            <label>Abstufungen</label>
        </td>
        <td colspan="1">
            <select class="form-control" onchange="Passe_Antworten_an(this.value)" name="model.questionViewModels[@Session["last"]].scaleLength">
                @for (int c = 3; c <= 97; c++)
                {
                    <option value="@c">
                        @c
                    </option>
                }
            </select>
        </td>
    </tr>

    <tr>
        <td rowspan="6">
            <input id="Skala_fuer_Erstellung" class="input-range" style="height:150px;min-width:75px" type="range" value="0" step="1" min="1" max="3">
        </td>
    </tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Minimum</label>
        </td>
        <td>
            <input name="model.questionViewModels[@Session["last"]].choices[0].text" class="form-control" type="text" />
        </td>
    </tr>
    <tr class="Erstell_Zeile"></tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Mittelwert</label>
        </td>
        <td>
            <input id="MittelFeld_Text" name="model.questionViewModels[@Session["last"]].choices[1].text" class="form-control" type="text" />
        </td>
    </tr>
    <tr class="Erstell_Zeile"></tr>
    <tr class="Erstell_Zeile">
        <td>
            <label>Maximum</label>
        </td>
        <td>
            <input id="MaxiFeld_Text" name="model.questionViewModels[@Session["last"]].choices[2].text" class="form-control" type="text" />
        </td>
    </tr>
</table>

<script>
    function Passe_Antworten_an(Zahl) {
        var skala = document.getElementById("Skala_fuer_Erstellung");
        var mittelfeld = document.getElementById("MittelFeld_Text");
        var maxifeld = document.getElementById("MaxiFeld_Text");
        if (Zahl % 2 == 0) {
            $('#MittelFeld_Text').prop('disabled', true);
            $('#MittelFeld_Text').attr('name', "");
            $('#MaxiFeld_Text').attr('name', "model.questionViewModels[" +@Session["last"] +"].choices[1].text");
        }
        else {
            $('#MittelFeld_Text').prop('disabled', false);
            $('#MittelFeld_Text').attr('name', "model.questionViewModels[" +@Session["last"] +"].choices[1].text");
            $('#MaxiFeld_Text').attr('name', "model.questionViewModels[" +@Session["last"] +"].choices[2].text");
        }        
        skala.max = Zahl;
    }
</script>

<style>
    .Erstell_Zeile {
        height: 30px;
    }

    .input-range {
        -webkit-appearance: slider-vertical;
        width: 1px !important;
        margin: unset;
        margin-top: 19px;
        transform: rotate(-180deg);
    }
</style>