@model SurveyViewModel
<script src="~/Scripts/Frageerstellung.js"></script>
@{
    ViewBag.Title = "Umfrage Erstellen";
}
<link href="~/Content/Home.css" rel="stylesheet" type="text/css" media="print" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="panel">
            <div class="panel-heading Tabellen-Header">
                <h4 class="Überschrift_in_Home">Fragebogen erstellen</h4>
            </div>
            <div class="panel-body Tabellen-Body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    @Html.LabelFor(model => model.name, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.name, new {htmlAttributes = new {@class = "form-control TextfeldInBearbeitung", required = "required", maxlength = 150}})
                        @Html.ValidationMessageFor(model => model.name, "", new {@class = "text-danger"})
                    </div>
                    <div class="col-md-offset-3 col-md-9" style="margin-top: 25px;">
                        <input type="submit" value="Umfrage erstellen" class="btn btn-warning KnopfMitText"/>
                    </div>
                </div>

            </div>
        </div>

    </div>
}
