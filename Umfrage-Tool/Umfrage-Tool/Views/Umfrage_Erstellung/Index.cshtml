
@{
    ViewBag.Title = "Umfrage_Erstellung";
}

@section scripts {
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script type="text/javascript">
    function Neue_Zeile() {
        var Tabelle = document.getElementById("FragenListe");

        var Zeile = Tabelle.insertRow(Tabelle.rows.length);

        var Text = Zeile.insertCell(0);
        Text.innerHTML = "<input class='form-control' name='FrageText" + Tabelle.rows.length + "' type='text'/>";
        var Typ = Zeile.insertCell(1);
        Typ.innerHTML = "<select class='form-control' name='FrageTyp" + Tabelle.rows.length + "'><option value='Freitext'>Freitext</option></select>";
        var Leer = Zeile.insertCell(2);

        var Loesch = Zeile.insertCell(3);
        Loesch.innerHTML = "<button class='btn btn-danger' style='width:100%' name='FrageLoeschen" + Tabelle.rows.length + "' onclick='deleteRow(this)'>X</button>";

        $("tbody").sortable();
    }

    function deleteRow(r) {
        var i = r.parentNode.parentNode.rowIndex;
        document.getElementById("FragenListe").deleteRow(i);
    }
</script>
    }


<div>
    <div class="panel panel-default">
        <div class="panel-heading">Fragebogen erstellen</div>
        <div class="panel-body">
            <label>
                Name:
                <input type="text" />
            </label>
            </br>
            <button class="btn btn-lg btn-info" onclick="Neue_Zeile()">Neue Frage hinzufügen</button>

            </br>
            <label>Fragen:</label>
            <table id="FragenListe" class="table" style="width:100%">
                <tbody>
                    <tr>
                        <th style="width:40%">Text</th>
                        <th style="width:20%">Typ</th>
                        <th style="width:30%"></th>
                        <th style="width:10%">Löschen</th>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-lg btn-primary">Speichern</button>
        </div>
        <div class="panel-footer">
        </div>
    </div>

</div>

