
@{
    ViewBag.Title = "Index";
}
@model ICollection<SurveyViewModel>

<div class="panel panel-default">
    <div class="panel-heading">Fragebögen</div>
    <div class="panel-body">
        <ul style="list-style: none">
            @foreach (var survey in Model)
            {
                <li>
                    <div class="col-lg-3">@survey.name</div><div class="col-lg-3">
                        @if (survey.sessionViewModel == null)
                        {
                           @Html.Raw(0);
                        }
                        else { @survey.sessionViewModel.Count()}

                    </div><div class="col-lg-6"><a type="button" class="btn btn-info btn-sm" href="/Umfrage_Ergebnisse/Ergebnisse">Anzeigen</a></div>
                </li>
            }
        </ul>
    </div>
</div>

