@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @{
                if (User.Identity.Name == "Admin@FI17.de")
                {
                    <li>
                        @Html.ActionLink("Neuen Nutzer erstellen", "Register", "Account", new {@class="kopfzeilenElement"})
                    </li>
                }
            }
            <li>
                <a class="kopfzeilenElement">Hallo @User.Identity.GetUserName()!</a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="kopfzeilenElement">Abmelden</a>
            </li>

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Anmelden", "Login", "Account", null, new {id = "loginLink", @class = "kopfzeilenElement" })</li>
    </ul>
}